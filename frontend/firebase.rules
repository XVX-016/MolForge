rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own molecules
    match /users/{userId}/molecules/{moleculeId} {
      // Allow read/write if authenticated and the userId matches
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow read for public molecules (optional - remove if you want strict privacy)
      // allow read: if resource.data.public == true;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

